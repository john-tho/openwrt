#include "qca955x.dtsi"

#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>
#include <dt-bindings/interrupt-controller/irq.h>

/ {
	compatible = "mikrotik,routerboard-wap-g-5hact2hnd", "qca,qca9556";
	model = "MikroTik RouterBOARD wAP G-5HacT2HnD";

	chosen {
		bootargs = "console=ttyS0,115200n8 dyndbg=\"file drivers/net/phy/at803x.c +p\"";
	};

	aliases {
		mdio-gpio1 = &mdio2;
	};

	keys {
		compatible = "gpio-keys";

		reset {
			label = "reset";
			linux,code = <KEY_RESTART>;
			gpios = <&gpio 1 GPIO_ACTIVE_LOW>;
			debounce-interval = <60>;
		};
	};

	mdio2: mdio {
		compatible = "virtual,mdio-gpio";

		gpios = <&gpio 12 GPIO_ACTIVE_HIGH>, /* MDC */
			<&gpio 11 GPIO_ACTIVE_HIGH>; /* MDIO */
		#address-cells = <1>;
		#size-cells = <0>;

		phy0: ethernet-phy@0 {
			reg = <0>;
			device_type = "ethernet-phy";

			phy-mode = "sgmii";

			at803x-override-sgmii-link-check;
		};
	};
};

&eth1 {
	status = "okay";

	pll-data = <0x03000101 0x80000101 0x80001313>;
	phy-handle = <&phy0>;

	qca955x-sgmii-fixup;

	gmac-config {
		device = <&gmac>;
	};
};

&spi {
	status = "okay";

	// driver does not support cs-gpios, requires cs2 set via pinmux
	cs-gpios = <&gpio 5 GPIO_ACTIVE_LOW>, <&gpio 17 GPIO_ACTIVE_LOW>;

	flash@0 {
		compatible = "jedec,spi-nor";
		reg = <0>;
		spi-max-frequency = <40000000>;

		partitions {
			compatible = "fixed-partitions";
			#address-cells = <1>;
			#size-cells = <1>;

			partition@0 {
				label = "RouterBoot";
				reg = <0x0 0x20000>;
				compatible = "mikrotik,routerboot-partitions";
				#address-cells = <1>;
				#size-cells = <1>;

				partition@0 {
					label = "bootloader1";
					reg = <0x0 0x0>;
					read-only;
				};

				hard_config {
					read-only;
				};

				bios {
					size = <0x1000>;
					read-only;
				};

				partition@10000 {
					label = "bootloader2";
					reg = <0x10000 0x0>;
					read-only;
				};

				soft_config {
				};
			};

			partition@20000 {
				compatible = "mikrotik,minor";
				label = "firmware";
				reg = <0x020000 0xfe0000>;
			};
		};
	};

	zt2046@2 {
		reg = <2>;
		/* when driver loads, NOR no longer functions (false instant operations, all-zero reads) */
		// compatible = "zt2046q", "ti,ads7846";
		spi-max-frequency = <2000000>;
		pinctrl-names = "default";
		pinctrl-0 = <&pinmux_spi_cs2>;
		/* driver requires irq & pendown gpio.
		 * provide two unused GPIOs as dummy
		 */
		// interrupts-extended = <&gpio 22 IRQ_TYPE_NONE>;
		// pendown-gpio = <&gpio 23 GPIO_ACTIVE_LOW>;
	};
};

&wmac {
	status = "okay";

	qca,no-eeprom;
};

&pcie0 {
	status = "okay";

	wifi@0,0 {
		compatible = "qcom,ath10k";
		reg = <0 0 0 0 0>;
	};
};

&pinmux {
	pinmux_spi_cs2: pinmux_spi_cs2 {
		/* set SoC GPIOs functions
		 * each GPIO output function register holds 4 gpios,
		 * 8 bits per GPIO
		 * GPIO17 at register 0x1804003c (offset 0x10)
		 * to function 0xb (CS2),
		 * with mask 0x0000ff00 (do not alter GPIOS 16,18,19)
		 */
		pinctrl-single,bits = <((17>>4)*4) (0xb<<((17%4)*8)) (0xff<<((17%4)*8))>;
	};
};
