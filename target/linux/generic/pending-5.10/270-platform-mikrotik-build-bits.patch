This patch adds platform/mikrotik kernel build bits

Signed-off-by: Thibaut VARÃˆNE <hacks@slashdirt.org>
---
 drivers/platform/Kconfig  | 2 ++
 drivers/Makefile | 1 +
 2 files changed, 3 insertions(+)

--- a/drivers/platform/Kconfig
+++ b/drivers/platform/Kconfig
@@ -13,3 +13,5 @@ source "drivers/platform/chrome/Kconfig"
 source "drivers/platform/mellanox/Kconfig"
 
 source "drivers/platform/olpc/Kconfig"
+
+source "drivers/platform/mikrotik/Kconfig"
--- a/drivers/Makefile
+++ b/drivers/Makefile
@@ -86,6 +86,8 @@
 obj-$(CONFIG_SPMI)		+= spmi/
 obj-$(CONFIG_HSI)		+= hsi/
 obj-$(CONFIG_SLIMBUS)		+= slimbus/
+# link platform/mikrotik before net, so that mac-address can be set
+obj-$(CONFIG_MIKROTIK_RB_SYSFS)	+= platform/mikrotik/
 obj-y				+= net/
 obj-$(CONFIG_ATM)		+= atm/
 obj-$(CONFIG_FUSION)		+= message/
