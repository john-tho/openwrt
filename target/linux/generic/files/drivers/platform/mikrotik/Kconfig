menuconfig MIKROTIK
	bool "Platform support for MikroTik RouterBoard virtual devices"
	default n
	help
	  Say Y here to get to see options for the MikroTik RouterBoard platform.
	  This option alone does not add any kernel code.


if MIKROTIK

config MIKROTIK_RB_SYSFS
	tristate "RouterBoot sysfs support"
	depends on MTD
	select LZO_DECOMPRESS
	select CRC32
	help
	  This driver exposes RouterBoot configuration in sysfs.

if MIKROTIK_RB_SYSFS

config MIKROTIK_RB_MACADDRS
	bool "RouterBoot set MAC addresses with dynamic DT properties"
	default n
	select OF_DYNAMIC
	help
	  This driver uses the hard cfg tag MAC address, and DT descriptions
	  to dynamically set ethernet mac addresses.

endif # MIKROTIK_RB_SYSFS
endif # MIKROTIK
